<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/activity_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_header_v10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:background="@drawable/obect_header_txt_v1_"
        android:gravity="center"
        android:padding="15dp"
        android:text="Wogals App: Start_Page.java / activity_start.xml"
        android:textColor="#F4511E"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/But_OpenCvPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_btn_login_background"
        android:text="OpenCv Page(1)"
        android:textColor="#FFC107"
        android:textSize="25sp"
        android:textStyle="italic"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/txt_header_v10"
        android:layout_alignStart="@+id/But_oPenCv_100"/>

    <Button
        android:id="@+id/But_oPenCv_100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/But_OpenCvPage"
        android:layout_margin="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_btn_login_background"
        android:text="----"
        android:textColor="#FFC107"
        android:textSize="25sp"
        android:textStyle="italic"/>


</RelativeLayout>


